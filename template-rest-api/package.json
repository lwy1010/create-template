{
  "name": "template-rest-api",
  "version": "0.0.1",
  "scripts": {
    "dev": "export NODE_ENV=development && nodemon -r tsconfig-paths/register --transpile-only src/app.ts",
    "build": "rm -fr dist  && tsc",
    "start": "export NODE_ENV=production && npm run build && pm2 start 'node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/app.js'",
    "stop": "pm2 status && pm2 stop all",
    "eslint": "eslint \"src/**/*.{js,ts}\" --fix",
    "prettier": "prettier \"src/**/*.{js,ts,json,md}\" --write"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "6.0.5",
    "mongoose-id": "^0.1.3",
    "mongoose-paginate-v2": "^1.4.2"
  },
  "devDependencies": {
    "@7inch/eslint-config-node": "^0.5.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.1",
    "@types/config": "^0.0.39",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.172",
    "@types/mongoose-paginate-v2": "^1.3.11",
    "@types/node": "^17.0.18",
    "eslint": "^7.31.0",
    "lint-staged": "^11.1.1",
    "nodemon": "^2.0.15",
    "pm2": "^5.2.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2",
    "yorkie": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,md}": "prettier --write"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint --edit $1"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "license": "MIT"
}
